<?xml version="1.0" encoding="utf-8"?>
<manifest>
  <!-- associated voice handler -->
  <voice id="org.opent2t.sample.lightcontrol.cortana.vcd.superpopular" />
  <!-- associated schemas -->
  <schemas>
      <schema id="opent2t.platform" type="OCF" />
      <schema id="org.opent2t.sample.binaryswitch.superpopular" main="true" type="OCF" />
      <schema id="oic.core" type="OCF" />
      <schema id="oic.baseresource" type="OCF" />
      <schema id="oic.oic-link" type="OCF" />
      <schema id="oic.r.switch.binary" type="OCF" />
  </schemas>
  <!-- associated onboarding module -->
  <onboarding id="org.opent2t.onboarding.wifi.wemo">
    <onboardflow name="getUserInput">
        <flow type="input">
          <arg name="ssid" />
          <description language="en">What WiFi network do you want to use?</description>
        </flow>
        <flow type="password">
          <arg name="password"  />
          <description language="en">Type in your WiFi password</description>
        </flow>
        <flow type="input">
          <arg name="access" />
          <description language="en">What is the current device address?</description>
        </flow>
      </onboardflow>
  </onboarding>
</manifest>